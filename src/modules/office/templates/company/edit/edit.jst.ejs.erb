{{%= outlet('officeTopbar') }}

<div class="inner-view-content">
	<div class="header">Данные компании</div>

	<label>Название</label>
	<input type="text" disabled data-bind="value: name"/>

	<div class="hint">Если вы хотите изменить название компании, <span class="green">напишите в АЛОЛЬ </span></div>

	<label>Категория</label>
	<select name="category_id" id="category_id"
	        data-bind="value:integer(category_id), underscore:state_categories, events: ['change']">
		<script type="text/template">
			<@ _.each(obj, function(value, key) { @>
			<optgroup label="<@- key @>">
				<@ _.each(value, function (category) { @>
				<@ if (category.id == {{= category_id }}) { @>
				<option value="<@- category.id @>" selected><@- category.name @></option>
				<@ } else { @>
				<option value="<@- category.id @>"><@- category.name @></option>
				<@ }}); @>
			</optgroup>
			<@ }); @>
		</script>
	</select>

	<label>Корпоративный e-mail</label>
	<input type="text" name="email" id="email" maxlength="50"
	       data-bind="value:email, events: ['input','paste','change']">

	<label>Сайт компании</label>
	<input type="text" name="site" id="site" maxlength="40"
	       data-bind="value:ignoreWhitespace(site), events: ['input','paste','change']">


					<!--</div>-->
					<!--<div class="card-number" data-bind="text:card_card_number"></div>-->
				<!--</div>-->
			<!--</div>-->

			<div class="card-item">
				<a class="button list-item menu-item selected-card" data-bind="attr: { 'data-id':get(card_bank, 'id') }">
					<img data-bind="attr: { src:get(get(card_bank, 'image'), 'url') }"/>

					<div class="content">
						<div class="info">
							<div class="bank-name" data-bind="text:card_bank_name"></div>
							<div class="title" data-bind="text:card_title"></div>
							<div class="card-number" data-bind="text:card_card_number"></div>
						</div>
					</div>

					<!--<i class="ic-chevron-right"></i>-->
				</a>
			</div>

			<form class="body-padding">
				<label>Сумма вывода</label>
				<input type="number" class="radius" id="amount"/>
				<input type="text" name="amount"/>

				<div class="hint">
					<div class="hint-text">Сумма вывода должна быть больше <span data-bind="text:state_minimumAmount"></span> руб.</div>
					<div class="hint-info"><i class="ic-info-circle" role="tooltip" data-tooltip aria-haspopup="true"
					                          data-options="disable_for_touch:true"
					                          data-bind="attr: { title: format('Комиссия составляет $1 рублей.', state_totalFee) }"></i></div>
				</div>

				<label>Сумма к зачислению</label>
				<input type="number" class="radius" id="actualAmount"/>
				<input type="text" name="actualAmount"/>

			</form>

			<div class="text-center">
				<button class="button continue-button blue filled" type="button">ПРОДОЛЖИТЬ</button>
			</div>
		</div>
	</div>
</div>


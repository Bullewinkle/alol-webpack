<div class="bbm-modal">
	{{ if (title) { }}
	<div class="bbm-modal__topbar">
		<h3 class="bbm-modal__title text-center">{{- title }}</h3>
	</div>
	{{ } }}


	<div class="bbm-modal__section">
		{{ if (message) { }}
		<p class="text-center">{{= message }}</p>
		{{ } }}
		{{ if (inputValue) { }}
			<input type="{{- type }}" class="radius answer-input" value="{{- inputValue }}" autofocus/>
		{{ } else { }}
			<input type="{{- type }}" class="radius answer-input"/>
		{{ } }}
	</div>


	<div class="bbm-modal__bottombar">
		<div class="row collapse">
			<div class="small-12 columns">
				<button name="ok" class="blue filled">{{- submitButtonText }}</button>
			</div>
		</div>
	</div>
</div>